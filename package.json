{
  "name": "matrix-canvas",
  "version": "1.0.0-beta.0",
  "type": "module",
  "description": "canvas-matrix2d",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "scripts": {
    "dev": "npm-run-all --parallel build:watch dev:website",
    "dev:website": "pnpm -r --filter=website run dev",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:website": "pnpm build && pnpm -r --filter=website run build",
    "format": "prettier --write --ignore-unknown '**/*.{tsx,ts,css}'"
  },
  "author": {
    "name": "Vitalij Ryndin",
    "email": "sys@crashmax.ru",
    "url": "https://crashmax.ru"
  },
  "keywords": [
    "matrix",
    "canvas"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/matrix-canvas.git"
  },
  "bugs": {
    "url": "https://github.com/crashmax-dev/matrix-canvas/issues"
  },
  "homepage": "https://crashmax-dev.github.io/matrix-canvas/",
  "packageManager": "pnpm@7.6.0",
  "devDependencies": {
    "@crashmax/prettier-config": "^1.1.2",
    "@crashmax/tsconfig": "^1.0.2",
    "@types/css-font-loading-module": "^0.0.7",
    "@types/node": "^18.6.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vite-plugin-dts": "^1.4.0"
  }
}
